@import 'nib'
body
	color #fff
	font-family: 'Lato', sans-serif;
.page
	text-align left
	background-color #222
	.quote
		background-color rgba(0, 0, 0, 0.5)
		text-align right
		color #fff
		text-shadow: 2px 2px #000;
		font-size 3.5vh
		p
			font-size 7.5vh
			font-family: 'Oswald', sans-serif;
		span
			font-size 4.5vh
	footer
		font-size: 5.5vh;
.icon
	stroke #fff
p
	text-shadow: 2px 2px #000;
	color #fff

img
	-webkit-filter: blur(5px);
	-moz-filter: blur(5px);
	-o-filter: blur(5px);
	-ms-filter: blur(5px);
	filter: blur(5px);
#suicide
	background-position: top center;
	background-repeat: no-repeat;
	background-size: cover	
	background-image url(https://i.ytimg.com/vi/5AwUdTIbA8I/maxresdefault.jpg)
	
